<div class="contact">
    <div class="contact-title">
        <h2>Contactanos</h2>
    </div>

    <div class="contact-content">
        <div class="img-contact">
            <img src="/images/nosotros.jpg" alt="">
        </div>

        <div class="form-content">
            <form action="./contact" method="post" class="form">
                <div class="form-group">
                    <input type="text" id="fullName" name="fullName" placeholder="Nombre">
                    <label for="fullName">Nombre</label>
                </div>

                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Email">
                    <label for="email">Email</label>
                </div>

                <div class="form-group">
                    <textarea name="message" id="message" name="message" placeholder="Detalle su obra para armar un presupuesto"></textarea>
                    <label for="message">Mensaje</label>
                </div>

                <div class="spacer10"></div>
                <div class="warning">
                    {{ validacion }}
                </div>

                <div class="center-btn-wrapper">
                    <input class="btn" type="submit" placeholder="Enviar">
                </div>
            </form>
        </div>
    </div>
</div>
